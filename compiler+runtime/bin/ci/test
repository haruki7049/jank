#!/usr/bin/env bash

set -eu

llvm_dir="${PWD}/build/llvm-install"
if [[ ! -d "${llvm_dir}" ]];
then
  mkdir -p build
  pushd build
    ../bin/build-clang
  popd
fi
export CC="${llvm_dir}/usr/local/bin/clang"
export CXX="${llvm_dir}/usr/local/bin/clang++"

./bin/configure -GNinja \
                -Djank_tests=on \
                -Djank_analysis="${ANALYSIS:-off}"  \
                "$@"
./bin/compile

